<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f7ebdf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/toolD"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/cookbook"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textAlignment="gravity"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="16dp"
            android:text="XÁC NHẬN THOÁT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_marginTop="5dp"
        android:layout_below="@id/toolD"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_below="@id/line"
        android:id="@+id/dialogQuit"
        android:layout_margin="15dp"
        android:textSize="18dp"
        android:textColor="#000"
        android:text="Bạn có muốn thoát ứng dụng này không?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/dialogQuit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:id="@+id/btnYes"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="Yes"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/btnNo"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="No"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>